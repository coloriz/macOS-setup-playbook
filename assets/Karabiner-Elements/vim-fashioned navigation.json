{
    "title": "Vim-fashioned navigation",
    "rules": [
        {
            "description": "Use cmd+y/o to move the cursor by words",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": ["left_option"]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": ["left_option"]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Use cmd+u/i to move to line head, tail",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "u",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": ["left_command"]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": ["left_command"]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Use cmd+p/; to page up down",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "page_up"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "page_down"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Use cmd+h/j/k/l to left down up right",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["left_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Use CapsLock to switch to 'CURSOR_MODE'",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'CURSOR_MODE'"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Use CapsLock to switch to 'NORMAL_MODE'",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'NORMAL_MODE'"
                        }
                    ]
                }
            ]
        }
    ]
}
